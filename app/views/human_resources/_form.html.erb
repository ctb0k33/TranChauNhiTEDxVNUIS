<%= form_with(model: human_resource) do |form| %>
<% if human_resource.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(human_resource.errors.count, "error") %> prohibited this human_resource from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% human_resource.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :Member_ID, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.number_field :Member_ID, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Member_Name, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.text_area :Member_Name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Contact_Number, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.number_field :Contact_Number, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Email, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.text_area :Email, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Department, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.text_area :Department, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Description, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.text_area :Description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Position, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.text_area :Position, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Bio, class: label_class, style: "font-weight: bold !important; color: red;" %>
          <%= form.text_area :Bio, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary'), style: "font-weight: bold !important; color: black; background: red;" %>

<% if human_resource.persisted? %>
<%= link_to "Cancel", human_resource, class: button_class(theme: 'primary'), style: "font-weight: bold !important; color: black; background: red;" %>
<% else %>
<%= link_to "Cancel", human_resources_path, class:  button_class(theme: 'primary'), style: "font-weight: bold !important; color: black; background: red;" %>
<% end %>
<% end %>
