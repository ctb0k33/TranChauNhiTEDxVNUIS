<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit sponsorship_level</h1>
    <% if @sponsorship_level.persisted? %>
    <%= button_to 'Destroy', @sponsorship_level, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', sponsorship_level: @sponsorship_level %>
</div>
